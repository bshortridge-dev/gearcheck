
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL") // uses connection pooling
}
model Character {
  id            Int      @id @default(autoincrement())
  name          String
  link          String
  charRealm     String
  combinedData  String
  className     String  // Changed from 'class'
  classSpec      String  // Changed from 'spec'
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model ArchonGear {
  id            Int      @id @default(autoincrement())
  categoryName  String
  itemName      String
  href          String
  maxKey        String
  popularity    String
  itemIcon      String
  className     String  // Changed from 'class'
  classSpec      String  // Changed from 'spec'
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model whBestGear {
  id            Int      @id @default(autoincrement())
  itemSlot      String
  itemName      String
  itemLink      String?  // Made optional
  sourceName    String
  sourceLink    String? // Made optional
  className     String
  classSpec     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}